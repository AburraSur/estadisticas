{% extends 'base.html.twig' %}

{% block body %}
    <h1>Linea</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ linea.id }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ linea.descripcion }}</td>
            </tr>
            <tr>
                <th>Vigencia</th>
                <td>{% if linea.vigencia %}{{ linea.vigencia|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('linea_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('linea_edit', { 'id': linea.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
